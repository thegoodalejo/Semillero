	public static String validarTexto(WebDriver driver,By strNombre) {
		
		driver.findElement(strNombre).getText();
		driver.manage().timeouts().implicitlyWait(1000, TimeUnit.MILLISECONDS);
		boolean statusVacio = driver.findElements(strNombre).size() ==0;
		return "";
	}
	

